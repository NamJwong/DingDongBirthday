<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dingdongbirthday">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACTION_OPEN_DOCUMENT"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DingDongBirthday">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="@string/permissions_loader_meta_key"
                android:value="android.permission.READ_EXTERNAL_STORAGE, ACTION_OPEN_DOCUMENT"/>
        </activity>
        <activity android:name="com.example.dingdongbirthday.AddBirthdayActivity"/>
    </application>
</manifest>