<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonGoMain"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/cancel" />

        <ImageButton
            android:id="@+id/buttonSaveBirthday"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:layout_marginLeft="300dp"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_down" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/continueRegistrationCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="연속해서 등록하기"
        android:layout_below="@id/linear1"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="75dp"
        app:cardElevation="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/continueRegistrationCheckBox">
        <ImageButton
            android:id="@+id/buttonSetPhoto"
            android:layout_width="160dp"
            android:layout_height="157dp"
            android:background="#00ff0000"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/basic_user_image" />
    </androidx.cardview.widget.CardView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/cardView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="이름"/>

        <EditText
            android:id="@+id/editTextSetName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_columnSpan="2">
            <LinearLayout
                android:id="@+id/linearLayoutSetBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:text="생일"/>
                <TextView
                    android:id="@+id/textViewSetBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="1997년 10월 7일"/>
            </LinearLayout>
            <DatePicker
                android:id="@+id/datePickerSetBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="그룹"/>

        <Spinner
            android:id="@+id/spinnerSetGroup"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="알림"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSetAlarm"
                android:layout_width="276dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>
            <Button
                android:id="@+id/buttonSetAlarm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:layout_gravity="center_vertical"
                android:text="변경"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="메모"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextSetMemo"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:maxLength="60" />
            <TextView
                android:id="@+id/textViewMemoLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </GridLayout>
</RelativeLayout>